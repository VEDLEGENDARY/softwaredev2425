/* QTextEdit Styles */
WordProcessor.QTextEdit {
    border: 1px solid #ced4da;
    border-radius: 5px;
    padding: 10px;
    font-size: 14px;
    background-color: #ffffff;
}

WordProcessor.QTextEdit:focus {
    border: 1px solid #ced4da;
    border-radius: 5px;
    padding: 10px;
    font-size: 14px;
    background-color: #f4f8ff;
    border: 1px solid #007bff; 
    outline: none; 
}

